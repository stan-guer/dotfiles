[bar/fullbar]
monitor = ${env:MONITOR:}
include-file = ~/.config/polybar/fullbar

background = #141314
foreground = #ccc2a6

modules-left = bspwm separatordotted info-docker
modules-center = title
modules-right = vpn-openvpn-isrunning separatordotted system-nvidia-smi separatordotted memory cpu temperature separatordotted wlan battery-combined-udev separatordotted date powermenu

[module/memory]
type = internal/memory
internal = 1
format-prefix = RAM:
format-prefix-foreground = "#8be9fd"
format = <label>
label-foreground = "#8be9fd"
label = %mb_used%
format-prefix-padding = 1

[module/system-nvidia-smi]
type = custom/script
exec = ~/.config/polybar/system-nvidia-smi.sh
interval = 4
tail = false

[module/cpu]
type = internal/cpu
internal = 0.5
format-prefix = CPU  
format-prefix-foreground = "#ff79c6"
format = <label>%
label =  %percentage%
format-foreground = "#ff79c6"
format-prefix-padding = 1

[module/temperature]
type = internal/temperature
hwmon-path = /sys/devices/virtual/thermal/thermal_zone0/hwmon1/temp1_input 
