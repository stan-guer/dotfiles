label-warn-foreground = "#ffb86c"
ramp-0 = □
ramp-1 = ▣
ramp-2 = ☠
ramp-0-foreground = "#50fa7b"
ramp-1-foreground = "#50fa7b"
ramp-2-foreground = "#ffb86c"

